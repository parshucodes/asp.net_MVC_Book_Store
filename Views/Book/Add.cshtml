@{
}
@model MyBookStore.Models.Domain.Book
<div class="container pt-5">
    <div class="col-md-6">
        <h3>Add Book</h3>
        <form asp-action="Add" method="Post">
            <div class="form-group">
                <label asp-for="Title">Title*</label>
                <input type="text" class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GenreID">Genre*</label>
                <select asp-for="GenreID" asp-items="Model.GenreList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="GenreID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublisherId">PublisherId*</label>
                <select asp-for="PublisherId" asp-items="Model.PublisherList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorID">AuthorID*</label>
                <select asp-for="AuthorID" asp-items="Model.AuthorList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="AuthorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalPages">TotalPages*</label>
                <input type="text" class="form-control" asp-for="TotalPages" />
                <span asp-validation-for="TotalPages" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Isbn">Isbn*</label>
                <input type="text" class="form-control" asp-for="Isbn" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            @if(TempData["msg"]!=null)
            {
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <div class="form-group">
                <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i>Save</button>
                <a class="btn btn-primary" asp-action="GetAll" asp-controller="Book"><i class="bi bi-list"></i>List</a>
            </div>
        </form>
    </div>
</div>
