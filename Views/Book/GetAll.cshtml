@{
}
@model IEnumerable<MyBookStore.Models.Domain.Book>
<div class="container pt-3">
    <div class="row">
        <div class="col-md-8">
            <a class="btn btn-dark" asp-action="Add" asp-controller="Book">+Add More</a>
        </div>
    </div>
    <div class="col-md-8">
        <h3>Update Book</h3>
        <table class="table table-stripped tabe-bordered table-dark">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Isbn</th>
                    <th>TotalPages</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>Action</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.GenreName</td>
                        <td>@item.Isbn</td>
                        <td>@item.TotalPages</td>
                        <td>@item.AuthorName</td>
                        <td>@item.PublisherName</td>
                        <td>
                            <a class="btn btn-success" href="/Book/Update?id=@item.Id"><i class="bg-info bi-pen"></i></a>
                            @*<a class="btn btn-success" asp-action="Edit" asp-controller="Book" asp-route-id="@item.Id">Edit</a>*@
                            <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Book/Delete?id=@item.Id"><i class="bg-info bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
