@{
}
@model IEnumerable<MyBookStore.Models.Domain.Publisher>
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" asp-action="Add" asp-controller="Publisher">Add More</a>
        </div>
    </div>
    <div class="col-md-6">
        <h3>Update Publisher</h3>
        <table class="table table-stripped tabe-bordered table-dark">
            <thead>
                <tr>
                    <th>PublisherName</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.PublisherName</td>
                        <td>
                            <a class="btn btn-success" href="/Publisher/Update?id=@item.Id">Edit</a>
                            @*<a class="btn btn-success" asp-action="Edit" asp-controller="Publisher" asp-route-id="@item.Id">Edit</a>*@
                            <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Publisher/Delete?id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
